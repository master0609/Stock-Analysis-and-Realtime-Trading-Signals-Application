modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "iana-etc", "libxcrypt", "pkg-config", "qhull", "tcl", "tk", "xsimd"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "StockApp"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "StockAnalysisApp"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "StockSocketServer"

[[workflows.workflow]]
name = "StockAnalysisApp"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run attached_assets/final_app.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "StockSocketServer"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server/websocket && python stock_socket_server.py"
waitForPort = 8001

[[workflows.workflow]]
name = "StockApp"
author = 41840654
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python attached_assets/socket_server.py &"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run attached_assets/final_app.py --server.port 5000"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8001
externalPort = 3000
